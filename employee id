#include <stdio.h>

int main() {
    int id;
    char name[30];
    float salary;

    // Input
    printf("Enter employee ID: ");
    scanf("%d", &id);

    printf("Enter employee name: ");
    scanf("%s", name); // this won't allow spaces in the name

    printf("Enter employee salary: ");
    scanf("%f", &salary);

    // Output
    printf("\nEmployee Details:\n");
    printf("ID: %d\n", id);
    printf("Name: %s\n", name);
    printf("Salary: %.2f\n", salary);

    return 0;
}
